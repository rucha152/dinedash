<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBg">

    <androidx.cardview.widget.CardView
        android:layout_width="323dp"
        android:layout_height="87dp"
        android:layout_marginBottom="12dp"
        android:elevation="10dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/histImage"
                android:layout_width="80dp"
                android:layout_height="47dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/food_name_menu"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="18dp"
                android:text="Food Name PlaceHolder"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/histImage"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/menu_price"
                android:layout_width="50dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toEndOf="@id/food_name_menu"
                android:text="Price"
                android:gravity="center"
                android:layout_marginLeft="58dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/cart"
                android:layout_width="50dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toEndOf="@id/food_name_menu"
                android:text="Add to Cart"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:layout_marginLeft="58dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/menu_price"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                style="@style/AddToCartButton"
                android:textColorHint="@color/white"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>