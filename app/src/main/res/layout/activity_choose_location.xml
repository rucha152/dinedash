<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLocation">
    
    
    <TextView
        android:id="@+id/choose_location"
        android:layout_width="325dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="Choose your location"
        />
   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/text_input_layout"
       android:layout_width="match_parent"
       android:layout_height="57dp"
       style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
       app:layout_constraintTop_toBottomOf="@id/choose_location"
       android:gravity="center"
       android:layout_margin="50dp"
       app:boxStrokeWidth="0dp"
       app:boxStrokeWidthFocused="0dp">


       <AutoCompleteTextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/listlocation"
           android:inputType="none"
           android:text="Choose Location"
           />


   </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Knowing your location helps us tailor our services to your needs. We can suggest nearby restaurants, events, and services that match your preferences and interests. \n Your safety is our top priority. With access to your location, we can provide additional security features, such as verifying your identity and protecting against fraudulent activities.
        Rest assured that we value your privacy and security. We will only use your location information for the purposes outlined above and will never share it with third parties without your consent."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout"
        android:textSize="16sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="160dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>