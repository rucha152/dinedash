<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button style -->
    <style name="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Add to Cart button style -->
    <style name="AddToCartButton" parent="BaseButton">
        <item name="android:background">@drawable/button_background_add_to_cart</item>
    </style>

    <!-- Proceed button style -->
    <style name="ProceedButton" parent="BaseButton">
        <item name="android:background">@drawable/button_background_proceed</item>
    </style>
</resources>
